# Aliases
alias l="lsd -lah"
alias nv="nvim"
alias rm="trash -rf"
alias bbd="brew bundle dump --force --describe"
alias man="batman"
alias grep="batgrep"
alias trail="<<<${(F)path}"
alias cat="bat"


# Add Locations to $PATH Variable

# Write Handy Functions
function mkcd() {
  mkdir -p "$@" && cd "$_";
}

# Use ZSH Plugins

